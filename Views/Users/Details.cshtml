@{
    var DictPizza = (Dictionary<string, Pizza>)ViewData["Pizza"];
    var DictToppings = (Dictionary<string, Toppings>)ViewData["Toppings"];
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
   @if (TempData["Added"] != null)
    {
        <script>
            alert("Ädded To Cart Successfully");
        </script>
    }




    <p>@TempData.Peek("UserID")</p>
    <p>Pizza</p>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Pizza Id</th>
                <th>Pizza Name</th>
                <th>Toppings ID</th>
                <th>Toppings Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in DictPizza.Keys)
            {
                <tr>
                    <td>
                        @DictPizza[item].ID
                    </td>
                    <td>
                        @DictPizza[item].Name
                    </td>
                    @if (DictToppings.ContainsKey(item))
                    {
                        <td>@DictToppings[item].ID</td>
                        <td>@DictToppings[item].Name</td>
                        <td>@((@Convert.ToInt32(DictPizza[item].Price)+@Convert.ToInt32(DictToppings[item].Price)))</td>
                    }
                    else
                    {
                        <td rowspan="2"> NO Toppings</td>
                        <td>@DictPizza[item].Price</td>
                    }
                    <td><a href="@Url.Action("Delete","Users",new {ID=@item})"><button class="btn btn-warning">Delete</button></a></td>
                </tr>

            }
        </tbody>
    </table>
    @Html.ActionLink("Go Back", "Pizzas", "Users")

</body>
</html>